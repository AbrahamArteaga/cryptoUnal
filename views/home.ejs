<%- include('partials/head') %>
<body id="homepage">
    
        <header>
            <h1 class="page__title">Crypto<b class="page__title page__title--bold">UNAL</b></h1>
        </header>
        <main>
            <section class="wallets">
                <h1 class="wallets__title">Wallets </h1> 
                <div class="crypto">
                    <figure class="crypto__figure">
                        <img
                        src="img/eth.svg"
                        alt=""
                        />
                    </figure>
                    <div class="crypto__data-conteiner">
                        <div class="crypto__data crypto__data--currency">
                            <p class="crypto__text crypto__text--abbreviation-currency">ETH</p>
                            <p class="crypto__text crypto__text--value"> <%= balance %> </p>
                            
                        </div>
                        <div class="crypto__data crypto__data--exchange">
                            <p class="crypto__text crypto__text--abbreviation-currency">COP</p>
                            <p class="crypto__text crypto__text--value"> <%= balance * 12997403.24 %></p> 
                        </div>
                    </div>            
                </div>                   

            </section>
            <section class="prices" >
            <canvas id="myChart" width="1" height="0" ></canvas>
            <script src= "https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.7.0/chart.js"></script><script>
            let valors = '<%- historical %>'.split(',');
            let dates = valors.slice(0, 12);
            let values = valors.slice(13, 25);
            const ctx = document.getElementById('myChart').getContext('2d');
            const myChart = new Chart(ctx, {
                scaleFontColor: "#FFFFFF",
                type: 'line',
                data: {
                    labels: dates,
                    datasets: [{
                        label: 'Ether price (USD)',
                        data: values,
                        backgroundColor: [
                            "rgb(51, 153, 102)"
                        ],
                        borderColor: [
                            'rgb(51, 153, 102)'
                        ],
                        borderWidth: 1,
                    
                    }]
                    ,color: 'rgb(255, 99, 132)'
                },
                options: {
                    scales: {
                        x: {
                                ticks: {
                                color: "white"
                                }
                            },
                        y: {
                            suggestedMin: 2900,
                            suggestedMax: 3100,
                            ticks: {
                                color: "white"
                                }
                        }
                    }
                }
            });
        </script>
            </section>

        </main>
        
        <footer>
            <section class="navigation">
                <div id="navigation">
                    <ul>
                        <li class="nav-list active">
                            <a href="#">
                                <span class="icon">
                                    <ion-icon name="home-outline"></ion-icon>
                                </span>
                                <span class="text">Home</span>
                            </a>
                        </li>
                        <li class="nav-list">
                            <a onclick="window.location.href = '/home/transaction'">
                                <span class="icon">
                                    <ion-icon name="arrow-redo-outline"></ion-icon>
                                </span>
                                <span class="text">Transactions</span>
                            </a>
                        </li>
                        <li class="nav-list">
                            <a href="#">
                                <span class="icon">
                                    <ion-icon name="cart-outline"></ion-icon>
                                </span>
                                <span class="text">Market</span>
                            </a>
                        </li>
                        <li class="nav-list">
                            <a onclick="window.location.href = '/'">
                                <span class="icon">
                                    <ion-icon name="log-out-outline"></ion-icon>
                                </span>
                                <span class="text">Log out</span>
                            </a>
                        </li>
                        <div class="indicator"></div>
                    </ul>
                </div>
            </section>
        </footer>
        
        <script>
            const list = document.querySelectorAll('.nav-list');
            function activeLink() {
                list.forEach((item) =>
                    item.classList.remove('active'));
                this.classList.add('active');
            }
            list.forEach((item) =>
                item.addEventListener('click', activeLink));
        </script>
        
        <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
        <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
        <h2 class="transaction_title" >Transactions</h2>
        <table class="table">
            <thead>
                <tr>
                    <th>From</th>
                    <th>To</th>
                    <th>Value</th>
                    <th>date</th>
                </tr>
            </thead>
            <tbody>
                <% transactions.forEach(transaction => { %>
                    <tr>
                        <td><%= transaction.from %></td>
                        <td><%= transaction.to %></td>
                        <td><%= transaction.value %></td>
                        <td><%= transaction.timeStamp %></td>
                    </tr>
                <% }) %>
            </tbody>

</body>
<%- include ('partials/footer') %>